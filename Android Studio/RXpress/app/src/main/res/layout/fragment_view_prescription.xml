    <TextView
        android:id="@+id/prescription_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prescription_view_title"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/prescription_view_title"
        android:orientation="vertical">
        <TextView
            android:id="@+id/prescription_view_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dosage_s"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/prescription_view_title"
            />

        <TextView
            android:id="@+id/prescription_view_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency_view"

            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/prescription_view_dosage"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/prescription_view_adminstered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/administered_s"

            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/prescription_view_dosage"
            app:layout_constraintStart_toStartOf="parent"/>



        <TextView
            android:id="@+id/prescription_view_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requirements_s"

            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/prescription_view_frequency"/>

        <TextView
            android:id="@+id/prescription_view_rxNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rx_number_s"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/prescription_view_other"/>
    </LinearLayout>

