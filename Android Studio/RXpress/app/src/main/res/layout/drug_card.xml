<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drug_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="12dp"
    app:layout_constraintTop_toBottomOf="@+id/drug_interaction_btn">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_teal_gradient">
    </LinearLayout>
    <TextView
        android:id="@+id/drug_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:text="@string/drug1_s"
        android:paddingTop="8dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>


    <TextView
        android:id="@+id/drug_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:text="@string/drug2_s"
        android:paddingTop="53dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="98dp"
        android:text="@string/severity_s"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/interaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="143dp"
        android:paddingBottom="8dp"
        android:layout_marginRight="12dp"
        android:text="@string/interaction"
        android:textSize="16sp" />
</androidx.cardview.widget.CardView>